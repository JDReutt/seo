{{$defaultVarMetas := filter_default_var_metas edit_metas}}
{{$pageMetas := filter_page_metas edit_metas}}
{{$actions := load_show_actions}}
{{if $actions}}
<div class="qor-page__header">
  {{$actions}}
</div>
{{end}}

<div class="qor-page__body">

  {{render "shared/flashes"}}
  {{render "shared/errors"}}

  <div class="qor-page__title">
      <h5>{{dt (printf "%v.default_metas.title" .Resource.ToParam) "Site-wide Settings"}}</h5>
      <p>{{dt (printf "%v.default_metas.description" .Resource.ToParam) "Here you can set site-wide variables and preferences for metadata."}}</p>
  </div>
  <div class="qor-form-container">
    <div>
      <form class="qor-form" action="{{edit_resource_path .Result .Resource}}" method="POST" enctype="multipart/form-data">
        {{render_form .Result $defaultVarMetas}}
        <div class="qor-form__actions">
          <button class="mdl-button mdl-button--colored mdl-button--raised mdl-js-button mdl-js-ripple-effect qor-button--save" type="submit">{{t "Save Changes"}}</button>
        </div>
      </form>
    </div>
  </div>

  <div class="qor-page__title">
    <h5>{{dt (printf "%v.page_metas.title" .Resource.ToParam) "Page Metadata Defaults"}}</h5>
    <p>{{dt (printf "%v.page_metas.description" .Resource.ToParam) "These defaults are for pages automatically generated by the system, you can override them on the individual pages."}}</p>
  </div>
  <form class="qor-form" action="{{edit_resource_path .Result .Resource}}" method="POST" enctype="multipart/form-data">
    {{render_form .Result $pageMetas}}
  </form>


</div>
